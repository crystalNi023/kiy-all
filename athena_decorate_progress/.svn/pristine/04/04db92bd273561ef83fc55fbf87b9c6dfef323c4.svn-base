html,body{
	background: rgb(245, 244, 250) !important;
	height: auto;
}
.plan_stage_nav{
	font-size: 16px;
	height: 80px;
	line-height: 80px;
	display: inline-block;
	/* width: 100%; */
	/* border-bottom:1px solid rgb(96, 158, 233); ; */
}
.plan_dialogue{
	width: 70%;
	height: auto;
	min-height: 500px;
	background: #FFFFFF;
}
.plan_change_dialogue{
	width: 80%;
	margin: auto;
	height: auto;
