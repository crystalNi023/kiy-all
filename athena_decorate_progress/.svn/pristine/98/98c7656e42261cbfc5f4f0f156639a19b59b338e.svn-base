html,body{
	background: rgb(245, 244, 250) !important;
}

.file_btn{
	display: inline-block;
	width: auto;
	padding: 0 10px;
	margin: 0 5px;
	height: 20px;
	border: 1px solid #4CAE4C;
	line-height: 20px;
	border-radius: 3px;
	cursor: pointer;
	color: black !important;
}
.file_text{
	margin: 0 5px;
}

.add_user_modal{
	width: 60% !important;
	background: #FFFFFF;
}

.add_inp{
	border: none !important;
	border-bottom: 2px solid #E8E8E8 !important;
	margin-top: 20px;
	width:100%;
}

#showPic div{
	display: inline-block;
	height: 220px;
	vertical-align: middle;
	width: 100%;
}
#showPic1 div{
	display: inline-block;
	margin: 10px;
	width: 200px;
	height: 200px;
	vertical-align: middle;
}
#showPic img{
	width: 100%;
	height: 88%;
}
#showPic1 img{
	width: 100%;
	height: 100%;
}
#design_img{
	background-color: rgb(242, 242, 242);
}
#design_img1{
	background-color: rgb(242, 242, 242);
}
.upload_icon{
	height: 100%;
    width: 100%;
    padding-right: 30px;
    text-align: center;
    line-height: 180px !important;
	position: absolute;
    font-size: 50px !important; color: #d6d6d6;
}
.selector_file{
	width: 100%; height: 100%; opacity: 0;
}
.btn_remove{
	width: 100%;
    display: inline-block;
    text-align: center;
}
