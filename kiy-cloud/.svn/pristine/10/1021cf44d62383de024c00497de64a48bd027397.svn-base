public final class Converter {

	public static boolean getBoolean(String value) {
		if (value == null || value.length() == 0)
			return false;
		if ("1".equals(value)) {
			return true;
		} else if ("yes".equalsIgnoreCase(value)) {
			return true;
		} else if ("true".equalsIgnoreCase(value)) {
			return true;
		}
		return false;
	}
}
