package com.kiy.servo;

import org.apache.commons.daemon.Daemon;
import org.apache.commons.daemon.DaemonContext;
import org.apache.commons.daemon.DaemonInitException;

import com.kiy.servo.cloud.Cloud;
import com.kiy.servo.cruise.Cruise;
import com.kiy.servo.data.Data;
import com.kiy.servo.driver.Driver;
import com.kiy.servo.http.Http;
import com.kiy.servo.job.Strategy;
import com.kiy.servo.master.Master;
import com.kiy.servo.notice.Notice;

/**
 * 服务主类（启动入口）
 * 
 * @author Simon(ZhangXi TEL:13883833982)
 *
 */
public final class Service implements Daemon {

	private static Service instance = null;

	/**
	 * 主函数入口， 直接启动程序运行在命令行控制台时调用此方法； 通过Apache
	 * Aaemon启动服务为JAVA程序模式时调用此方法，要求必须传递参数；
	 * 
	 * @param args
	 * @throws Exception
	 * @throws DaemonInitException
	 */
	public static void main(String[] args) throws Exception {
		instance();

		if (args == null || args.length == 0) {
			Log.info("SERVO BOOT WITH \"main and no arguments\"");

			Runtime.getRuntime().addShutdownHook(new Thread() {
				@Override
				public void run() {
					Log.info("SERVO SHUTDOWN WITH \"main and no arguments\"");

					if (instance != null) {
						instance.stop();
						instance.destroy();
						synchronized (instance) {
							instance.notifyAll();
						}
					}
					// Runtime.getRuntime().removeShutdownHook(this);
				}
			});

			instance.init(null);
			instance.start();
			synchronized (instance) {
				instance.wait();
			}
		} else {
			String param = args[0];
			if ("START".equalsIgnoreCase(param)) {
				Log.info("SERVO BOOT WITH \"main and has arguments\"");

				instance.init(null);
				instance.start();
				synchronized (instance) {
					instance.wait();
				}
			}
			if ("STOP".equalsIgnoreCase(param)) {
				Log.info("SERVO SHUTDOWN WITH \"main and has arguments\"");

				if (instance != null) {
					instance.stop();
					instance.destroy();
					synchronized (instance) {
						instance.notifyAll();
					}
				}
			}
		}
	}

	/**
	 * 服务启动入口 通过Apache Aaemon启动服务为JVM模式时调用
	 * 
	 * @param args
	 * @throws Exception
	 */
	public static void start(String[] args) throws Exception {
		Log.info("SERVO BOOT WITH \"start\"");

		instance();
		instance.init(null);
		instance.start();
		synchronized (instance) {
			instance.wait();
		}
		instance = null;
	}

	/**
	 * 服务停止入口 通过Apache Aaemon停止服务为JVM模式时调用
	 * 
	 * @param args
	 */
	public static void stop(String[] args) {
		Log.info("SERVO SHUTDOWN WITH \"stop\"");

		if (instance != null) {
			instance.stop();
			instance.destroy();
			synchronized (instance) {
				instance.notifyAll();
			}
		}
	}

	private synchronized static Service instance() {
		if (instance == null)
			instance = new Service();
		return instance;
	}

	////////////////////////////////////////////////////////

	@Override
	public void init(DaemonContext arg0) {
		Log.info("SERVO INITIALIZE ...");

		Config.load();
		Config.check();

		Executor.initialize();
		Data.initialize();
		Driver.initialize();
		Master.initialize();
		Cloud.initialize();
		Http.initialize();
		Cruise.initialize();
		Strategy.initialize();
		Notice.initialize();

		Log.info("SERVO INITIALIZED");
	}

	@Override
	public void start() {
		Log.info("SERVO START ...");

		Driver.start();
		Master.start();
		Cloud.start();
		Http.start();
		Cruise.start();
		Strategy.start();

		Log.info("SERVO STARTED");
	}

	@Override
	public void stop() {
		Log.info("SERVO STOP ...");

		Master.stop();
		Cloud.stop();
		Http.stop();
		Driver.stop();
		Cruise.stop();
		Strategy.stop();

		Log.info("SERVO STOPPED");
	}

	@Override
	public void destroy() {
		Log.info("SERVO DESTROY ...");

		try {
			Master.destroy();
			Cloud.destroy();
			Driver.destroy();
			Http.destroy();
			Data.destroy();
			Strategy.destroy();
			Notice.destroy();
			Executor.destroy();

		} catch (Exception ex) {
			Log.error(ex);
		}

		Log.info("SERVO DESTROYED");
	}
}